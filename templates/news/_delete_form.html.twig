<form method="post" action="{{ path('news_delete', {'id': news.id}) }}" onsubmit="return confirm('Es-tu sûr(e) de vouloir supprimer cette actualité ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
