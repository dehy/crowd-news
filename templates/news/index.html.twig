{% extends 'base.html.twig' %}

{% block title %}News index{% endblock %}

{% block body %}
    <h1>Liste des actualités</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Titre</th>
                <th>Extrait</th>
                <th>Contenu</th>
                <th>Date de l'évènement</th>
                <th>Créée le</th>
                <th>Supprimée le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for news in news %}
            <tr>
                <td>{{ news.id }}</td>
                <td><a href="#">{{ news.author }}</a></td>
                <td>{{ news.title }}</td>
                <td>{{ news.abstract }}</td>
                <td>{{ news.content }}</td>
                <td>{{ news.eventDate ? news.eventDate|date('Y-m-d') : '' }}</td>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ news.deletedAt ? news.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('news_show', {'id': news.id}) }}">show</a>
                    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucune actualité</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('news_new') }}">Nouvelle actualité</a>
{% endblock %}
