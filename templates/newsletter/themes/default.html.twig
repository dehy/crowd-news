{% set date = newsletter.scheduledFor %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "https://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="https://www.w3.org/1999/xhtml">
<head>
    <!-- The character set should be utf-8 -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width"/>
    <!-- Link to the email's CSS, which will be inlined into the email -->
    <link rel="stylesheet" href="assets/css/foundation-emails.css">
    <style>
        {{ source('newsletter/themes/foundation-emails.min.css') }}
    </style>
    <style>
        h2 {
            margin-top: 1em;
            Margin-top: 1em;
        }
        .header {
            background: #8a8a8a;
        }

        .header .columns {
            padding-bottom: 0;
        }

        .header p {
            color: #fff;
            margin-bottom: 0;
        }

        .header .wrapper-inner {
            padding: 20px;
            /*controls the height of the header*/
        }

        .header .container {
            background: #8a8a8a;
        }

        .wrapper.secondary {
            background: #f3f3f3;
        }
    </style>
</head>

<body>
    <table class="body" data-made-with-foundation="">
        <tr>
            <td class="float-center" align="center" valign="top">
                <center data-parsed="">
                    <table align="center" class="wrapper header float-center">
                        <tr>
                            <td class="wrapper-inner">
                                <table align="center" class="container">
                                    <tbody>
                                    <tr>
                                        <td>
                                            <table class="row collapse">
                                                <tbody>
                                                <tr>
                                                    <th class="small-6 large-6 columns first">
                                                        <table>
                                                            <tr>
                                                                <th> <img src="http://placehold.it/200x50/663399"> </th>
                                                            </tr>
                                                        </table>
                                                    </th>
                                                    <th class="small-6 large-6 columns last">
                                                        <table>
                                                            <tr>
                                                                <th>
                                                                    <p class="text-right">Actualités des entrepreneurs du {{ date|format_datetime(dateFormat="full", timeFormat="none", locale="fr") }}</p>
                                                                </th>
                                                            </tr>
                                                        </table>
                                                    </th>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <table align="center" class="container float-center">
                        <tbody>
                        <tr>
                            <td>
                                <table class="spacer">
                                    <tbody>
                                    <tr>
                                        <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="row">
                                    <tbody>
                                    <tr>
                                        <th class="small-12 large-12 columns first last">
                                            <table>
                                                <tr>
                                                    <th>
                                                        <h1>Bonjour, %%user.firstname%% !</h1>
                                                        <p class="lead">
                                                            Bienvenue dans cette nouvelle édition hebdomadaire de l'infolettre des entrepreneurs Coop'Alpha !
                                                            Voici sans plus attendre les actualités de la semaine.
                                                        </p>
                                                        {#<table class="callout">
                                                            <tr>
                                                                <th class="callout-inner primary">
                                                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veniam assumenda, praesentium qui vitae voluptate dolores. <a href="#">Click it!</a></p>
                                                                </th>
                                                                <th class="expander"></th>
                                                            </tr>
                                                        </table>
                                                        #}
                                                        {% if newsletter.news.count > 0 %}
                                                            {% for news in newsletter.news %}
                                                                {{ _self.news(news) }}
                                                            {% endfor %}
                                                        {% else %}
                                                            Il semble qu'il n'y ai aucune actualité pour cette semaine ! À la semaine prochaine !
                                                        {% endif %}
                                                    </th>
                                                    <th class="expander"></th>
                                                </tr>
                                            </table>
                                        </th>
                                    </tr>
                                    </tbody>
                                </table>
                                <table class="wrapper secondary" align="center">
                                    <tr>
                                        <td class="wrapper-inner">
                                            <table class="spacer">
                                                <tbody>
                                                <tr>
                                                    <td height="16px" style="font-size:16px;line-height:16px;">&#xA0;</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                            <table class="row">
                                                <tbody>
                                                <tr>
                                                    <th class="small-12 large-12 columns">
                                                        <table>
                                                            <tr>
                                                                <th>
                                                                    <h5>Comment partager ton actualité</h5>
                                                                    <p>
                                                                        Connecte-toi sur <a href="https://crowdnews.admds.net" target="_blank" rel="noopener">Crowd News</a> et suis le chemin !
                                                                        Elle sera diffusée le lundi matin suivant.
                                                                    </p>
                                                                </th>
                                                            </tr>
                                                        </table>
                                                    </th>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                                <center data-parsed="">
                                    <table align="center" class="menu float-center">
                                        <tr>
                                            <td>
                                                <table>
                                                    <tr>
                                                        <th class="menu-item float-center"><a href="http://www.coopalpha.coop/page/mentions-legales" target="_blank">Mentions légales</a></th>
                                                        <th class="menu-item float-center"><a href="#">Vie Privée</a></th>
                                                        <th class="menu-item float-center"><a href="#">Se désinscrire</a></th>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </center>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </center>
            </td>
        </tr>
    </table>
</body>
</html>

{% macro news(news) %}
    <h2>{{ news.title }} <small class="author">par {{ news.author }}</small></h2>
    <p>{{ news.abstract }}</p>
    {% if news.content %}
        <p>{{ news.content|nl2br }}</p>
    {% endif %}
    {% if news.url %}
    <table class="button large secondary">
        <tr>
            <td>
                <table>
                    <tr>
                        <td><a href="{{ news.url }}" target="_blank" rel="noopener">Plus d'information</a></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    {% endif %}
{% endmacro %}